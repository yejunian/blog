---
import Footer from "@/components/Footer.astro";
import Header from "@/components/Header.astro";

import "@/styles/color.css";
import "@/styles/font.css";
import "@/styles/size.css";
import "@/styles/utility.css";
---

<!doctype html>
<html lang="kr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/blog/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>yejunian/blog</title>

    <link
      rel="stylesheet"
      as="style"
      crossorigin
      href="https://cdn.jsdelivr.net/gh/orioncactus/pretendard@v1.3.9/dist/web/variable/pretendardvariable-dynamic-subset.min.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Cascadia+Mono:ital,wght@0,200..700;1,200..700&display=swap"
      rel="stylesheet"
    />
  </head>

  <body>
    <Header />

    <main>
      <slot />
    </main>

    <Footer />
  </body>
</html>

<style is:global>
  html {
    margin: 0;

    -webkit-text-size-adjust: none;
    -moz-text-size-adjust: none;
    text-size-adjust: none;
  }

  body {
    display: flex;
    flex-direction: column;
    align-items: center;

    margin: 0;

    color: var(--color-text);
    font-family: var(--font-sans);
    font-feature-settings: "ss10"; /* Pretendard 중간 크기 심벌(원 문자) */
    font-weight: var(--font-weight-sans-regular);

    word-break: keep-all;
    overflow-wrap: break-word;
  }

  main {
    box-sizing: border-box;
    width: min(100%, var(--content-width-max));
  }

  :is(pre, code) {
    font-weight: var(--font-weight-mono-regular);
  }

  :is(dt, h1, h2, h3, h4, h5, h6, th, b, strong) :is(pre, code) {
    font-weight: var(--font-weight-mono-bold);
  }

  hr {
    margin: var(--gap-section) 0;
    border: none;
    height: 1px;

    background-color: var(--color-line-bright);
  }
</style>
